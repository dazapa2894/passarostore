
{{ 'section-collection-slider.css' | asset_url | stylesheet_tag }}

{% stylesheet %}

{% endstylesheet %}


<section id="collection-slider">  
   <!-- Slider main container -->
   <div class="container-new">
   <div class="collection-swiper-container">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      {% assign mas_abajito = false %}
      {% assign collection_to_show = 3 %}
      {% for link in linklists.categorias_slider_home.links %}
      {% assign collection = link.object %}
          {% if collection.all_products_count >= 0 %}
            <!-- collection info -->
            <a href="{{collection.url}}" class="swiper-slide" >

              <div class="title-container">
                <div class="titulo">
                  {{collection.title}}
                </div>
                <div class="comprar-coleccion">COMPRAR</div>
              </div>

              {% if collection.image %}
                {{ collection.image | img_url: '400x600' | img_tag: collection.image.alt }}
              {% else %}
                {% assign alt = collection.title | escape %}
                {{ collection.products.first.image | img_url: '400x600' | img_tag: alt }}
              {% endif %}

            </a>  
          {% endif %}

      {% endfor %}   
    </div>

    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>

    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>

  </div><!-- .collection-swiper-container -->
</div>
</section>


<script src="{{ 'collection-slider.js' | asset_url }}" defer="defer"></script>


{% schema %}
{
  "name": "t:sections.collection-slider.name",
  "class": "collection-slider",
  "settings": [
    
  ]
}
{% endschema %}