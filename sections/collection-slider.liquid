
{{ 'section-collection.slider.css' | asset_url | stylesheet_tag }}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}

<h2>Collecciones</h2>

<!-- Slider main container -->
<div class="swiper-container">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">

    <!-- Slides -->
    {% for collection in collections %}
      <!-- collection info -->
      <div class="swiper-slide">
        
        <a {% if collection.all_products_count > 0 %} href="{{ collection.url }}"{% endif %}  class=""> {% echo collection.title %} </a>
        

        {% if collection.image %}
          {{ collection.image | img_url: '450x450' | img_tag: collection.image.alt }}
        {% else %}
          {% assign alt = collection.title | escape %}
          {{ collection.products.first.image | img_url: '450x450' | img_tag: alt }}
        {% endif %}


      
      </div>


    {% endfor %}
    

    
  </div>
  <!-- If we need pagination -->
  <div class="swiper-pagination"></div>

  <!-- If we need navigation buttons -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>

  <!-- If we need scrollbar -->
  <div class="swiper-scrollbar"></div>

</div>
