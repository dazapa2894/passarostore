
{{ 'section-collection-slider.css' | asset_url | stylesheet_tag }}

{% stylesheet %}

{% endstylesheet %}


<section id="collection-slider">  
  <div class="container-new">
  <!-- Slider main container -->
  <div class="collection-swiper-container">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      {% assign mas_abajito = false %}
      {% assign collection_to_show = 3 %}
      {% for collection in collections %}
        {% unless collection.handle == 'nueva-coleccion' or collection.handle == 'descuentos-de-temporada' %}
          <!-- collection info -->
          <div class="swiper-slide {% if mas_abajito == false %}mas-abajito{% endif %}" >

            <div class="title-container">
              <div class="titulo">
                {{collection.title}}
              </div>
              <a href="{{collection.url}}">COMPRAR</a>
            </div>

            {% if collection.image %}
              {{ collection.image | img_url: '400x600' | img_tag: collection.image.alt }}
            {% else %}
              {% assign alt = collection.title | escape %}
              {{ collection.products.first.image | img_url: '400x600' | img_tag: alt }}
            {% endif %}

          </div>

          {% if mas_abajito == false %}
            {% assign mas_abajito = true %}
          {%else%}
            {% assign mas_abajito = false %}
          {% endif %}
        {% endunless %}

      {% endfor %}   
    </div>

  </div>

  <!-- If we need navigation buttons -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
</div><!-- .container -->
</section>

{% javascript %}
const swiper = new Swiper('.collection-swiper-container', 
{
  // Optional parameters
  loop: true,
  slidesPerView: 1,
  slidesPerGroup: 1,
  spaceBetween: 50,
  loopFillGroupWithBlank: true,
  centeredSlides: true,
  
  navigation: {
    nextEl: ".swiper-button-next",
    prevEl: ".swiper-button-prev",
  },
  scrollbar: {
    el: ".swiper-scrollbar",
    hide: true,
  },

  breakpoints: {
    870: {
      slidesPerView: 2,
      slidesPerGroup: 2,
      spaceBetween: 10,
      centeredSlides: false,
    },
    1235: {
      slidesPerView: 3,
      slidesPerGroup: 3,
      spaceBetween: 50,
      centeredSlides: false,
    },

  },
});
{% endjavascript %}


