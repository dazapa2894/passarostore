
{{ 'section-collection-slider.css' | asset_url | stylesheet_tag }}

{% stylesheet %}

{% endstylesheet %}



<!-- Slider main container -->
<div class="swiper-container">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">

    <!-- Slides -->
    {% assign mas_arribita = false %}
    {% for collection in collections %}

      <!-- collection info -->
      <div class="swiper-slide {% if mas_arribita %}mas-arribita{% endif %}" >

        <div class="title-container">
          <div class="titulo">
            {{collection.title}}
          </div>
          <a href="#">COMPRAR</a>
        </div>

        {% if collection.image %}
          {{ collection.image | img_url: '400x600' | img_tag: collection.image.alt }}
        {% else %}
          {% assign alt = collection.title | escape %}
          {{ collection.products.first.image | img_url: '400x600' | img_tag: alt }}
        {% endif %}

      </div>

      {% if mas_arribita == false %}
        {% assign mas_arribita = true %}
      {%else%}
        {% assign mas_arribita = false %}
      {% endif %}

    {% endfor %}
    

    
  </div>
  <!-- If we need pagination -->
  <div class="swiper-pagination"></div>

  <!-- If we need navigation buttons -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>

  <!-- If we need scrollbar -->
  <div class="swiper-scrollbar"></div>

</div>




{% javascript %}
const swiper = new Swiper('.swiper-container', 
{
  // Optional parameters
  loop: true,
  slidesPerView: 1,
  slidesPerGroup: 1,
  spaceBetween: 30,

  centeredSlides: true,
  loopFillGroupWithBlank: true,
  navigation: {
    nextEl: ".swiper-button-next",
    prevEl: ".swiper-button-prev",
  },

  breakpoints: {
    750: {
      slidesPerView: 2,
      slidesPerGroup: 2,
      spaceBetween: 30,
    },
    1024: {
      slidesPerView: 3,
      slidesPerGroup: 3,
      spaceBetween: 30,
    },

  },
});
{% endjavascript %}