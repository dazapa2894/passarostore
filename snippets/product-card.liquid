<div class="product-wrapper card-wrapper" variant_color="{{product_card_product.variants.first.option1}}" variant_size="{{product_card_product.variants.first.option2}}">
  
  <div class="product-img-wrapper">
    <a href="{{product_card_product.url}}" class="img-wrapper">
      {% if product_card_product.featured_image != blank %}
        <img class="product-img"
          src="{{product_card_product.featured_image | img_url: '375x' }}"
          loading="lazy"
          alt="{{product_card_product.featured_image.alt | escape }}"
        >
      {% else %}
        {{ 'product-1' | placeholder_svg_tag}}
      {% endif %}
      
      <div class="card__badge">
        {%- if product_card_product.available == false -%}
          <span class="badge badge--bottom-left color-{{ settings.sold_out_badge_color_scheme }}" aria-hidden="true">{{ 'products.product_card_product.sold_out' | t }}</span>
        {%- elsif product_card_product.compare_at_price > product_card_product.price and product_card_product.available -%}
          <span class="badge badge--top-left color-green pecentual-discount" aria-hidden="true">-{{ product_card_product.compare_at_price_max | minus: product_card_product.price | times: 100 | divided_by: product_card_product.compare_at_price_max }}%</span>
        {%- endif -%}
      </div>
    </a>
    
    <div class="show-variant">+</div>
    
    <div class="variant-pickers hide">
      <h5>Tallas</h5>
      <div class="product-sizes">
        {% assign first_size = product_card_product.variants[0].option2%}
        {% assign first_size_counter = 0%}
        {% for option in product_card_product.variants %}
          {% if first_size == option.option2 %}
            {% assign first_size_counter = first_size_counter | plus: 1 %}
            {% if first_size_counter > 1 %}
              {% break %}
            {% endif %}
          {% endif %}

          <div variant_size="{{option.option2}}" class="size-picker {% if forloop.first == true %}active{% endif %}">
            {{option.option2}}
          </div>
        
        {% endfor %}
      </div>        
      <select id="{{product_card_product.id}}-variant-selector" class="hidden" data-productid="{{product_card_product.id}}">
        {% for option in product_card_product.variants %}
          <option value="{{option.id}}" handle="{{product_card_product.handle}}" variant="{{-option.title-}}"> {{option.title}}</option>
        {% endfor %}
      </select>
      <div class="agregar-al-carrito blue-btn">AGREGAR AL CARRITO</div>

    </div><!-- end variant-pickers -->
    
  </div>
  <div class="product-colors">
    {% assign last_color = ''%}
    
    {% for option in product_card_product.variants %}

      {% assign actual_color = option.option1 %}
      {% assign mini_img = option.metafields.my_fields.miniatura_color %}
      {% assign actual_img = option.featured_media.preview_image.src %}

      {% if mini_img != blank %}
      
        {% if last_color != actual_color %} 
          {% assign last_color = actual_color %}
          <div class="variant-color-swatch {% if forloop.first == true %}active{% endif %}" variant_color="{{option.option1}}" variant_img_src="{{actual_img | img_url: '375x' }}">
            <img class="variant-img"
                  src="{{mini_img | img_url: '50x' , format: 'pjpg'}}"
                  loading="lazy"
                >
          </div>
        {% endif %}
        
      {% endif %}
    {% endfor %}
  </div>
  
  <div class="product-title">{{ product_card_product.title }}</div>
  <div class="product-price">{{ product_card_product.price | money_without_trailing_zeros }}</div>   

</div><!-- END card-wrapper -->
