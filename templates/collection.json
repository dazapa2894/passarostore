{
  "sections": {
    "breadcrumb": {
      "type": "collection-breadcrumb",
      "settings": {
      }
    },
    "product-grid": {
      "type": "main-collection-product-grid",
      "settings": {
        "products_per_page": 16,
        "image_ratio": "adapt",
        "show_secondary_image": false,
        "add_image_padding": false,
        "show_image_outline": true,
        "show_vendor": false,
        "enable_filtering": true,
        "enable_sorting": true,
        "collapse_on_larger_devices": false
      }
    },
    "infinite-scroll": {
      "type": "collection-infinite-scroll",
      "settings": {
        "enable_infinite_scroll": true,
        "container_selector": ".product-grid",
        "path": ".pagination .pagination__item--prev",
        "append": ".product-grid .grid__item",
        "hide_nav": ".pagination",
        "status": ".page-load-status",
        "status_info": "Loading...",
        "status_end": "No more product to load!"
      }
    }
  },
  "order": [
    "breadcrumb",
    "product-grid",
    "infinite-scroll"
  ]
}
